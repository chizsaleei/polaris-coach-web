{
  "name": "polaris-coach-web",
  "version": "0.1.0",
  "description": "Web app for Polaris Coach: onboarding, drills, feedback, libraries, billing UI, and admin tools.",
  "private": true,
  "license": "BUSL-1.1",
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "npm@10.9.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/chizsaleei/polaris-coach-web.git"
  },
  "bugs": {
    "url": "https://github.com/chizsaleei/polaris-coach-web/issues"
  },
  "homepage": "https://github.com/chizsaleei/polaris-coach-web",
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "dev:all": "concurrently \"npm run dev\" \"cd ../polaris-core && npm run dev\"",
    "preview:all": "concurrently \"npm run build && npm start\" \"cd ../polaris-core && npm run build && npm start\"",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint .",
    "typecheck": "tsc --noEmit",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "0.8.0",
    "@supabase/supabase-js": "2.81.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "express": "5.1.0",
    "framer-motion": "^11.3.30",
    "lucide-react": "^0.453.0",
    "next": "14.2.33",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwind-merge": "^2.3.0",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "16.0.5",
    "@types/express": "5.0.5",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/parser": "8.48.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "9.2.1",
    "cross-env": "7.0.3",
    "eslint": "9.39.1",
    "eslint-config-next": "16.0.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n": "16.6.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3"
  },
  "prettier": {
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "tabWidth": 2,
    "arrowParens": "always",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
